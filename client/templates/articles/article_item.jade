template(name="articleItem")
  .article
    .article-header
      a.title(href="{{pathFor 'articleShow'}}")
        h2= title
      .buttons
        +categoryCircle(categoryOptions)
    p.text-muted
      | #{date} | por #{author}
      if currentUser
        | | 
        a.fa.fa-pencil(href="{{pathFor 'articleEdit'}}")
        a.fa.fa-trash-o(href="#")
    if hasImage
      a(href="{{pathFor 'articleShow'}}")
        img.carousel-img(src=carouselImage)
    br
    span.content!= trimmedContent
    a.btn.pull-right.btn-default(href="{{pathFor 'articleShow'}}")
      | Continuar leyendo
      span.fa.fa-arrow-right
