template(name="articleShow")
  .row
    .col-md-8.article
      .category-title(style=backgroundColor)
        h1= categoryName
      .article-header
        a.title(href="{{pathFor 'articleShow'}}")
          h2= title
        .buttons
          +categoryCircle(categoryOptions)
      p.text-muted #{date} | por #{author}
        if currentUser
          | | 
          a.fa.fa-pencil(href="{{pathFor 'articleEdit'}}")
          a.fa.fa-trash-o(href="#")
      if hasImage
        img.carousel-img(src=carouselImage)
      br
      .article-content!= processedContent
    .col-md-4
      +sidebar
