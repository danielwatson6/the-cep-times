template(name="albumShow")
  .album-page
    h2= title
    p.text-muted Publicado el #{date}
      if currentUser
        | | 
        a.fa.fa-pencil(href="{{pathFor 'albumEdit'}}")
        a.fa.fa-trash-o(href="#")
    .pictures
      each pictures
        +picture
  
  #modal-1.modal.fade(tabindex="-1")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        .modal-body
          #carousel-2.carousel.slide(data-ride="carousel")
            .carousel-inner
              each pictures
                .item(class=isFirst)
                  img(src=url)
            a.left.carousel-control(href="#carousel-2" role="button" data-slide="prev")
              span.fa.fa-chevron-left(aria-hidden="true")
              span.sr-only Previous
            a.right.carousel-control(href="#carousel-2" role="button" data-slide="next")
              span.fa.fa-chevron-right(aria-hidden="true")
              span.sr-only Next
