template(name="navbar")
  nav.navbar.navbar-default.navbar-static-top
    .container
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#collapse-1")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          img(src="/images/logos/navbar_logo.png")
      #collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          each categories
            li
              +categoryCircle
              span.lead= name
