@import "mixins"

.navbar
  height 60px
  margin-bottom 0 // Remove spacing between default and admin navbars
  
  // Logo
  .navbar-brand
    padding-top 15px
    img
      max-height 30px

ul.navbar-right
  padding-top 10px
  
  a
    padding 10px
    padding-right 0
    .category-circle
      category-circle(35px)

.admin-navbar
  border 0
  border-radius 0
  height 70px
  background-color #333
  
  .navbar-left
    padding-top 10px
    span
      color #fff
    a:hover
      opacity 0.5
      
  
  #login-buttons
    margin-top 20px
    a.login-link-text
      color #fff
      text-decoration none
    a.login-link-text:hover
      color #eee
      text-decoration underline

.admin
  margin-top 10px
