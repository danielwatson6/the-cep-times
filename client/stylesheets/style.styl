body
  padding-top 55px

ul.navbar-right
  a
    padding 10px
    padding-right 0
    span
      border-radius 50%
      behavior url(PIE.htc) // IE8 support
      padding 10px
      color #fff
      opacity 0.7
      &:hover
        opacity 1

.carousel
  max-width 960px
  margin-left auto
  margin-right auto
  .carousel-inner .item img
    width 960px
  .carousel-button
    position relative
    top -60px
  .carousel-title
    text-align center
    position relative
    top -66px
    color #fff
    font-weight normal
    opacity 0.8
    h3
      padding 10px
