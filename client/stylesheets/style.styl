// Mixins

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

centerize()
  margin-left auto
  margin-right auto

// Navbar declarations

.navbar
  height 60px
  margin-bottom 0 // Remove spacing between default and admin navbars
  
  // Logo
  .navbar-brand
    padding-top 15px
    img
      max-height 30px

ul.navbar-right
  padding-top 10px
  
  a
    padding 10px
    padding-right 0

// Admin declarations

.admin-navbar
  border 0
  border-radius 0
  height 70px
  background-color #333
  
  #login-buttons
    margin-top 20px
    a.login-link-text
      color #fff
      text-decoration none
    a.login-link-text:hover
      color #eee
      text-decoration underline

.admin
  margin-top 10px

// Carousel declarations

carousel-width = 1140px
carousel-height = 610px

.carousel
  width carousel-width
  height carousel-height
  centerize()
  
  .carousel-inner .item img
    width carousel-width
    height carousel-height
  
  .carousel-button
    position relative
    top -60px
  
  .carousel-title
    padding-left 20px
    position relative
    top -66px
    color #fff
    opacity 0.8
    h3
      padding 10px
      font-weight 300
  
  .carousel-control
    background-image none
    opacity .5
    .fa
      position absolute
      top 50%
      &.fa-chevron-left
        right 50%
      &.fa-chevron-right
        left 50%   

// Articles

.article
  
  .article-header
    width 100%
    display inline-block
    a.title
      float left
      color #000
      text-decoration none
      h2
        font-weight normal
    .category
      float right
      margin-top 22px
  
  .author-img
    width 60px
    height @width
    border-radius (@width / 2)
    box-shadow 0 0 5px rgba(0, 0, 0, .6)
    img
      opacity 0
  
  img.carousel-img
    width 100%
    max-height 425px

// Category tabs' content

.category-title
  margin-top 25px
  width 100%
  color #fff
  h1
    font-weight 300
    padding 10px

// Sidebar

.sidebar
  width 100%
  max-height 743px
  overflow hidden
  img
    width 100%
  ul
    margin-top 10px
    list-style-type none
    li
      a
        float left
      p.lead
        margin-left 45px

.sidebar.fixed-to-top
  overflow visible
  position fixed
  width 360px
  top 0
  left 66%

// Miscellaneous

html
  height 100%

body
  height 100%

.category-circle
  width 35px
  height @width
  border-radius (@width / 2)
  behavior url(PIE.htc) // IE8 support
  text-align center
  padding-top 10px
  color #fff
  opacity 1
  &:hover
    opacity 0.7

.muted
  color #999
