// Mixins

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

centerize()
  margin-left auto
  margin-right auto

// Navbar declarations

.navbar
  height 60px
  // Remove spacing between default and admin navbars
  margin-bottom 0
  // Logo
  .navbar-brand
    padding-top 15px
    img
      max-height 30px

ul.navbar-right
  // Compensate for bottom space
  padding-top 1px
  // Spacing between circles
  a
    padding 10px
    padding-right 0
    // Roundness
    .navbar-circle
      width 35px
      height @width
      border-radius (@width / 2)
      behavior url(PIE.htc) // IE8 support
      text-align center
      padding-top 10px
      color #fff
      opacity 1
      &:hover
        opacity 0.7

// Admin declarations

.admin-navbar
  border 0
  border-radius 0
  height 70px
  background-color #333
  #login-buttons
    margin-top 25px
    a.login-link-text
      color #fff
      text-decoration none
    a.login-link-text:hover
      color #eee
      text-decoration underline

.admin
  margin-top 10px

// Carousel declarations

.carousel
  max-width 960px
  centerize()
  .carousel-inner .item img
    width 960px
  .carousel-button
    position relative
    top -60px
  .carousel-title
    text-align left
    position relative
    top -66px
    color #fff
    opacity 0.8
    h3
      padding 10px
      font-weight normal

// Articles

.article
  a
    color #000
    text-decoration none
    h2
      font-weight normal
  .author-img
    width 60px
    height @width
    border-radius (@width / 2)
    box-shadow 0 0 5px rgba(0, 0, 0, .6)
    img
      opacity 0
  img.carousel-img
    width 100%
    max-height 425px

