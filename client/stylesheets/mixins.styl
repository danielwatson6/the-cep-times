/* 
 * All mixins for use in other stylesheets
 * defined in this file
 */ 

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

centerize()
  margin-left auto
  margin-right auto

category-circle()
  width arguments
  height @width
  border-radius (@width / 2)
  behavior url(PIE.htc) // IE8 support
  text-align center
  padding-top (@width / 3.5)
  color #fff
  opacity 1
  &:hover
    opacity 0.7
