@import "mixins"

.albums
  margin-top 20px
  .album
    float left
    opacity 1
    background-color #ddd
    margin 5px
    .title
      position relative
      top -20px
      margin-top 0
      margin-bottom -20px
      color #fff
      background-color #000
      opacity 0.75
      width 100%
      text-align center
      display none
    &:hover
      opacity 0.8
      .title
        display block
        text-decoration none

.pictures
  margin-top 20px
  .picture
    float left
    margin 5px
  &:after
    content ""
    display table
    clear both
 
.thumb
  width 192px
  height 192px
  background-position center center
  background-size cover
  border 0

.modal
  width 100%
  overflow-y auto
  button.close
    margin-top -12px
  .modal-dialog
    width 1024px
    margin-top 0
    margin-bottom 0
    centerize()
    .modal-content
      border-top 0
      border-bottom 0
      .modal-body
        background-color #000
        padding 0
        .item img
          centerize()
